            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Armor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Magic.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weapon.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharDamage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharArmor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharMagic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Level)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Image)*@
            <img src="@item.Image" alt="@item.Name" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
    
</table>
