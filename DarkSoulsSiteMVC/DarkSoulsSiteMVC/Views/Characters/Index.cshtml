@model IEnumerable<DarkSoulsSite.Entities.Common.Character>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Armor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Magic.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weapon.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharDamage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharArmor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharMagic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
